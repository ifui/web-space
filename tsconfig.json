{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES5",
    "module": "CommonJS",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/views/**/*.ts",
    "src/main.ts",
    "config/**/*.ts",
    "config/*.ts",
    "utils/**/*.ts",
    "utils/*.ts",
    "runtime/**/*.tsx",
    "runtime/*.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
